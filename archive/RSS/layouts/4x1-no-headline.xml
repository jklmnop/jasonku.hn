<?xml version="1.0" encoding="UTF-8"?>
<Template>
    <Style>
	<![CDATA[
	p.story {
	    margin: 0;
	    padding: 0;
	}
	
	.author,
	.date {
	    text-align: left;
	    display: inline-block;
	}
	
	.image,
	.videoWrapper {
	    float: left;
	}
	
	.image {
            max-width: 100%;
            max-height: 100%;
        }
	
	.textWrapper {
	    overflow: hidden;
	}
	]]>
    </Style>
    <Layout> 
	<![CDATA[
	<article class="item">
	    <img class="image" />
	    <div class="videoWrapper">
		<div class="video">Loading the player...</div>
	    </div>
	    <div class="textWrapper">
		<div class="meta">
		    <span class="author author_font-style"></span>
		    <span class="separator">-</span>
		    <span class="date date_font-style"></span>
		</div>
		<p class="story story_font-style"></p>
	    </div>
	</article>
	]]>
    </Layout> 
</Template>